@using Gradebook.Business.Enums
@model UserType

@if (Model == UserType.Pupil)
{
    <ul class="nav nav-sidebar">
    </ul>
}

@if (Model == UserType.Parent)
{
    <ul class="nav nav-sidebar">
    </ul>
}

@if (Model == UserType.Teacher || Model == UserType.Administrator)
{
    <ul class="nav nav-sidebar">
    </ul>
}

@if (Model == UserType.Administrator)
{
    <ul class="nav nav-sidebar">
        @Html.ListItemAction(i18n.Teachers, "AddTeacher", "Admin") @*, "glyphicon glyphicon-sunglasses")*@
        @Html.ListItemAction(i18n.Subjects, "Subjects", "Admin") @*, "glyphicon glyphicon-book")*@
        @Html.ListItemAction(i18n.Grades, "AddGrade", "Admin")
    </ul>
}